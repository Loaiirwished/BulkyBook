@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2" >
                <div class="col-12  p-1" style="border:1px solid #000; border-radius:5px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />

                        <div class="card-body">
                            <div class="pl-1 fw-bold">
                                <p class="card-title pt-1 text-primary">@product.Title</p>
                                <p class="card-title text-info">@product.Author</p>
                            </div>
                            <div class="pl-1">
                                <p>List Price: <del>$@product.ListPrice.ToString("0.00")</del></p>
                            </div>
                            <div class="pl-1">
                                <p>As low as: $@product.Price100.ToString("0.00")</p>
                            </div>
                            
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-primary form-control" asp-action="Details" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
