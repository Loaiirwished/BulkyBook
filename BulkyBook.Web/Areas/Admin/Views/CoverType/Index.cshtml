@model List<CoverType>
@{
    ViewData["Title"] = "Index";
}
<br />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">CoverType List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New CoverType
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>CoverType Name</th>
                
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coverType in Model)
            {
                <tr>
                    <td class="col-5">@coverType.Name</td>
                    
                    <td class="col-3">
                        <a class="btn btn-primary" asp-controller="CoverType" asp-action="Edit" asp-route-id="@coverType.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a class="btn btn-danger" asp-controller="CoverType" asp-action="Delete" asp-route-id="@coverType.Id"><i class="bi bi-trash3"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
